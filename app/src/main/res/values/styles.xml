<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Light/Day Mode theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor1">#FCFCFC</item>
        <item name="toolbar">#4E5DB3</item>
        <item name="textcolor">#000000</item>
        <item name="tintcolor">#4E5DB3</item>
        <item name="buttoncolor">#2196F3</item>
        <item name="bottomnavibackground">#FFFFFF</item>
        <item name="floatbutton">#4E5DB3</item>
        <item name="modeselect">#000000</item>
        <item name="cardColor">#00BCD4</item>
    </style>


    <!-- Night / dark  Mode theme. -->
    <style name="darktheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor1">#303030</item>
        <item name="toolbar">#424242</item>
        <item name="textcolor">#ffffff</item>
        <item name="tintcolor">#ffffff</item>
        <item name="buttoncolor">#2196F3</item>
        <item name="bottomnavibackground">#212121</item>
        <item name="floatbutton">#1A1A1B</item>
        <item name="modeselect">#FCFCFC</item>
        <item name="cardColor">#3D4155</item>
    </style>

    <style name="dialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="searchViewStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">?attr/modeselect</item>
    </style>

    <style name="layoutTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">?attr/backgroundcolor1</item>
    </style>

    <style name="HeaderItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">23sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:shadowColor">#81000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="HeaderItemLineStyle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">@drawable/ic_launcher_background</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.MyAppUIDesignPractice</item>
        <item name="android:windowLightStatusBar" >true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>


    <style name="CustomAlertDialog">

        <!-- 꽉 채운 화면에 배경 없이 (custom view 영역만 보일 것이다.) -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>

        <!-- Dim 처리 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

        <!-- Dialog가 센터에 나오도록 -->
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/colorAccent</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/cardview_dark_background</item>
        <item name="android:textColor">@color/black</item>

        <item name="textStartPadding">8dp</item>
        <item name="textEndPadding">8dp</item>
        <item name="chipIconVisible">false</item>
        <!--<item name="chipIconTint">@color/icon_tint_category_state</item>
        <item name="chipIconSize">12dp</item>
        <item name="iconStartPadding">6dp</item>-->
        <item name="chipEndPadding">3dp</item>
        <item name="android:theme">@style/ChipOverlayTheme</item>
    </style>
    <!--<item name="fontFamily">@font/pretendard_medium</item>-->

    <style name="ChipOverlayTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Any other customization for this theme overlay -->
    </style>
</resources>